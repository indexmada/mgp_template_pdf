<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ajouter Brand dans Stock quant -->
        <record model="ir.ui.view" id="stock_quant_tree_custom">
            <field name="name">stock.quant.tree.custom</field>
            <field name="model">stock.quant</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="quantity"/>
                    <field name="x_brand"/>
                </tree>
            </field>
        </record>

        <!-- Ajouter Brand dans produit -->
        <record model="ir.ui.view" id="view_product_template_form_custom">
            <field name="name">product.template.form.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="x_brand_id" widget="selection"/>
                </field>
            </field>
        </record>

        <!-- FONCTION GROUP BY BRAND -->

<record id="product_template_tree_custom" model="ir.ui.view">
    <field name="name">product.template.tree.custom</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='product_variant_count']" position="after">
            <field name="x_brand_id" invisible="1"/>
        </xpath>
        <xpath expr="//tree" position="attributes">
            <attribute name="groups">product.group_uom,product.group_stock_packaging,my_brand.group_by_brand</attribute>
        </xpath>
        <xpath expr="//group[@name='product_template_price']" position="after">
            <group string="Brand" name="my_brand.group_by_brand">
                <field name="x_brand_id" groups="my_brand.group_by_brand"/>
            </group>
        </xpath>
    </field>
</record>


<record id="my_brand_group_by_brand" model="ir.actions.act_window">
    <field name="name">Products by Brand</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="product.product_template_search_view"/>
    <field name="context">{'search_default_group_by_brand': 1}</field>
    <field name="domain">[('x_brand_id', '!=', False)]</field>
</record>

<record id="my_brand_group_by_brand_action" model="ir.values">
    <field name="name">Products by Brand</field>
    <field name="model">ir.actions.act_window</field>
    <field name="key2">tree_but_brand</field>
    <field name="value" eval="'ir.actions.act_window,' + str(ref('my_brand_group_by_brand'))"/>
    <field name="group" eval="[(4,ref('product.group_uom')), (4,ref('my_brand.group_by_brand'))]"/>
    <field name="menuitem_id" ref="product.product_template_menu"/>
</record>




        <!-- Ajouter Brand dans la vue kanban de product.template -->
        <record model="ir.ui.view" id="view_product_template_kanban_custom">
            <field name="name">product.template.kanban.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_kanban_record_content']" position="inside">
                    <div class="o_kanban_bottom_right">
                        <div class="o_kanban_tags">
                            <field name="x_brand_id"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
